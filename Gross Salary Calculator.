#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int BasicSalary;
    float HRA,DA,Gross;
    scanf("%d",&BasicSalary);
    if(BasicSalary<=10000){
        HRA = 0.20*BasicSalary;
        DA = 0.30*BasicSalary;
    }
    else if(BasicSalary<=20000){
        HRA = 0.25*BasicSalary;
        DA = 0.40*BasicSalary;
    }
    else{
        HRA = 0.30*BasicSalary;
        DA = 0.50*BasicSalary;
    }
    Gross = BasicSalary+HRA+DA;
    printf("%.2f",Gross);
    
    return 0;
}
