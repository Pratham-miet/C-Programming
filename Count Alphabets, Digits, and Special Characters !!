#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
#include <ctype.h>
int main() {
    int counta=0,countd=0,counts=0;
    char str[1001];
    scanf("%[^\n]", str);
    for(int i=0; str[i]!='\0'; i++){
        if(isalpha(str[i])){
            counta++;
        }
        else if(isdigit(str[i])){
            countd++;
        }
        else{
            counts++;
        }
    }
    printf("%d %d %d", counta, countd, counts);
    return 0;
}
